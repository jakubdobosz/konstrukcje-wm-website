---
interface Props {
  lang?: string;
}

const { lang = 'pl' } = Astro.props;
const base = import.meta.env.BASE_URL;

const t = {
  pl: {
    company: 'Pracownia Projektowa Konstrukcje WM',
    desc: 'Projektujemy konstrukcje żelbetowe i prefabrykowane dla budownictwa mieszkaniowego, usługowego i przemysłowego.',
    services: 'Usługi',
    s1: 'Konstrukcje prefabrykowane', s2: 'Konstrukcje żelbetowe', s3: 'Konstrukcje sprężone', s4: 'Optymalizacja',
    contact: 'Kontakt',
    rights: 'Wszelkie prawa zastrzeżone.',
    serviceLinks: ['prefabrykacja', 'konstrukcje-zelbetowe', 'sprezone', 'optymalizacja'],
    serviceBase: 'uslugi',
  },
  en: {
    company: 'Design Office Konstrukcje WM',
    desc: 'We design reinforced concrete and precast structures for residential, commercial and industrial buildings.',
    services: 'Services',
    s1: 'Precast structures', s2: 'Reinforced concrete', s3: 'Prestressed concrete', s4: 'Optimization',
    contact: 'Contact',
    rights: 'All rights reserved.',
    serviceLinks: ['precast', 'reinforced-concrete', 'prestressed', 'optimization'],
    serviceBase: 'en/services',
  },
  de: {
    company: 'Ingenieurbüro Konstrukcje WM',
    desc: 'Wir planen Stahlbeton- und Fertigteilkonstruktionen für Wohn-, Gewerbe- und Industriegebäude.',
    services: 'Leistungen',
    s1: 'Fertigteilkonstruktionen', s2: 'Stahlbetonkonstruktionen', s3: 'Spannbetonkonstruktionen', s4: 'Optimierung',
    contact: 'Kontakt',
    rights: 'Alle Rechte vorbehalten.',
    serviceLinks: ['fertigteile', 'stahlbeton', 'spannbeton', 'optimierung'],
    serviceBase: 'de/leistungen',
  },
};

const tr = t[lang] || t.pl;
const serviceNames = [tr.s1, tr.s2, tr.s3, tr.s4];
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <img src={`${base}images/logo/WM_biale.png`} alt="Konstrukcje WM" width="48" height="48" class="footer-logo" />
        <p class="footer-company">{tr.company}</p>
        <p class="footer-desc">{tr.desc}</p>
      </div>

      <div class="footer-col">
        <h4>{tr.services}</h4>
        <ul>
          {serviceNames.map((name, i) => (
            <li><a href={`${base}${tr.serviceBase}/${tr.serviceLinks[i]}`}>{name}</a></li>
          ))}
        </ul>
      </div>

      <div class="footer-col">
        <h4>{tr.contact}</h4>
        <ul>
          <li>
            <a href="tel:+48791392370">+48 791 392 370</a>
          </li>
          <li>
            <a href="mailto:biuro@konstrukcje-wm.pl">biuro@konstrukcje-wm.pl</a>
          </li>
          <li>
            <span>ul. Sarnia 6, 80-336 Gdańsk</span>
          </li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p>NIP: 5842627831 · REGON: 381566723</p>
      <p>© 2026 {tr.company}. {tr.rights}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--dark-card);
    border-top: 1px solid var(--dark-border);
    padding: var(--space-3xl) 0 var(--space-xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: var(--space-3xl);
    margin-bottom: var(--space-3xl);
  }

  .footer-logo {
    margin-bottom: var(--space-md);
    opacity: 0.9;
  }

  .footer-company {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .footer-desc {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .footer-col h4 {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 2px;
    text-transform: uppercase;
    color: var(--gold);
    margin-bottom: var(--space-lg);
  }

  .footer-col ul {
    list-style: none;
  }

  .footer-col li {
    margin-bottom: var(--space-sm);
  }

  .footer-col a,
  .footer-col span {
    font-size: 0.9rem;
    color: var(--text-secondary);
    transition: color 0.2s;
  }

  .footer-col a:hover {
    color: var(--gold);
  }

  .footer-bottom {
    border-top: 1px solid var(--dark-border);
    padding-top: var(--space-lg);
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .footer-bottom p {
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
    .footer-bottom {
      flex-direction: column;
    }
  }
</style>
