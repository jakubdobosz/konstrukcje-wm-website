---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n/translations';

const lang = 'en';
const base = '/konstrukcje-wm-website';
---

<Layout title="Contact" lang={lang}>
  <section class="contact-hero"><div class="container"><h1>{t(lang, 'contact.title')}</h1><p>{t(lang, 'contact.subtitle')}</p></div></section>
  <section class="section"><div class="container contact-grid">
    <div class="contact-form-wrap">
      <form class="contact-form" id="contact-form">
        <div class="form-group"><label for="name">{t(lang, 'contact.name')} *</label><input type="text" id="name" name="name" required /></div>
        <div class="form-row">
          <div class="form-group"><label for="email">{t(lang, 'contact.email')} *</label><input type="email" id="email" name="email" required /></div>
          <div class="form-group"><label for="phone">{t(lang, 'contact.phone')}</label><input type="tel" id="phone" name="phone" /></div>
        </div>
        <div class="form-group"><label for="message">{t(lang, 'contact.message')} *</label><textarea id="message" name="message" rows="6" required></textarea></div>
        <div class="form-group consent"><label><input type="checkbox" name="consent" required /><span>{t(lang, 'contact.consent')} *</span></label></div>
        <button type="submit" class="btn btn-accent">{t(lang, 'contact.submit')} →</button>
      </form>
    </div>
    <div class="contact-info">
      <h2>{t(lang, 'contact.direct')}</h2>
      <div class="info-card"><h3>Mariusz Melloch</h3>
        <div class="info-items">
          <a href="tel:+48791392370" class="info-item"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/></svg><span>+48 791 392 370</span></a>
          <a href="mailto:biuro@konstrukcje-wm.pl" class="info-item"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><path d="M22 6l-10 7L2 6"/></svg><span>biuro@konstrukcje-wm.pl</span></a>
          <div class="info-item"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/><circle cx="12" cy="10" r="3"/></svg><span>ul. Sarnia 6, 80-336 Gdańsk, Poland</span></div>
        </div>
      </div>
      <div class="company-info"><p><strong>Pracownia Projektowa Konstrukcje WM</strong></p><p>NIP: 5842627831 · REGON: 381566723</p></div>
    </div>
  </div></section>
</Layout>
<script>
  const form = document.getElementById('contact-form');
  form?.addEventListener('submit', (e) => { e.preventDefault(); alert('Thank you! We will contact you soon.'); (form as HTMLFormElement).reset(); });
</script>
