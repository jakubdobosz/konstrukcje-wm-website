---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { projects } from '../../../i18n/projects';
const base = import.meta.env.BASE_URL;
---
<Layout title="Projekte — Konstrukcje WM" lang="de">
  <Header slot="header" lang="de" />
  <section class="page-hero"><div class="container">
    <div class="section-label">Projekte</div>
    <h1 class="section-title">Unsere Projekte</h1>
    <p class="section-desc">Wir realisieren anspruchsvolle Projekte in Polen, Schweden, Dänemark und Deutschland.</p>
  </div></section>
  <section class="section"><div class="container"><div class="grid-2">
    {projects.map(project => (
      <a href={`${base}de/projekte/${project.slug}`} class="project-card observe">
        <div class="project-image-wrap"><img src={`${base}images/projects/${project.images[0]}`} alt={project.data.de.name} loading="lazy" /><div class="project-image-overlay"></div><span class="project-location">{project.flag} {project.country}</span></div>
        <div class="project-info"><h3>{project.data.de.name}</h3><p>{project.data.de.challenge}</p>
          <div class="project-tags"><span class="project-tag">{project.data.de.type}</span>{project.data.de.stats[0] && <span class="project-tag">{project.data.de.stats[0].value}</span>}</div>
        </div>
      </a>
    ))}
  </div></div></section>
  <Footer slot="footer" lang="de" />
</Layout>
<style>
  .page-hero{padding:160px 0 40px;background:var(--dark)}
  .project-card{display:block;border-radius:12px;overflow:hidden;border:1px solid var(--dark-border);background:var(--dark-card);transition:.4s;text-decoration:none}
  .project-card:hover{border-color:rgba(201,169,110,.2);transform:translateY(-4px);box-shadow:0 20px 60px rgba(0,0,0,.3)}
  .project-image-wrap{position:relative;height:280px;overflow:hidden}.project-image-wrap img{width:100%;height:100%;object-fit:cover;transition:transform .6s}
  .project-card:hover .project-image-wrap img{transform:scale(1.05)}
  .project-image-overlay{position:absolute;inset:0;background:linear-gradient(to top,rgba(13,17,23,.6) 0%,transparent 60%)}
  .project-location{position:absolute;top:16px;right:16px;padding:4px 12px;background:rgba(13,17,23,.7);backdrop-filter:blur(10px);border-radius:100px;font-size:.7rem;font-weight:600;letter-spacing:1.5px;text-transform:uppercase;color:var(--gold);border:1px solid rgba(201,169,110,.2)}
  .project-info{padding:24px}.project-info h3{font-family:var(--font-heading);font-size:1.25rem;font-weight:600;margin-bottom:8px}
  .project-info p{font-size:.85rem;color:var(--text-secondary);line-height:1.7;display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;overflow:hidden;margin-bottom:16px}
  .project-tags{display:flex;flex-wrap:wrap;gap:6px}.project-tag{padding:4px 12px;border:1px solid var(--dark-border);border-radius:100px;font-size:.7rem;color:var(--text-muted)}
</style>
